<h1>鋼筆列表</h1>
<table class="table">
  <thead>
    <tr>
      <th>所有人</th>
      <th>品牌</th>
      <th>筆名</th>
      <th>售價</th>
      <th>筆況</th>
      <th colspan="2"></th>
    </tr>
  </thead>

  <tbody>
    <% @pens.each do |pen| %>
      <tr>
        <td><%= pen.user.id %></td> 
        <td><%= pen.brand %></td>	
        <td><%= pen.name %></td>
        <td><%= pen.price %></td>
        <td><%= pen.description %></td>
        <td>
          <% if pen.user.id == current_user.id %>
            <%= link_to "編輯", edit_pen_path(pen)%>
            <%= link_to "刪除", pen_path(pen), method: "delete", data: { conform: "確認刪除" }%>
          <% end %> 
        </td>		
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to '新增鋼筆', new_pen_path, class: 'btn btn-success btn-sm' %>
